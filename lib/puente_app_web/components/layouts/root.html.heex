<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Puente" suffix=" - Tendiendo puentes de solidaridad">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));

        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body class="min-h-screen bg-base-100">
    <!-- Navbar -->
    <div class="navbar bg-base-100 shadow-sm px-4 sm:px-6 lg:px-8 sticky top-0 z-50">
      <div class="navbar-start">
        <a href="/" class="flex items-center gap-2 text-xl font-bold text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 17h18"/>
            <path d="M6 17v-4"/>
            <path d="M18 17v-4"/>
            <path d="M6 13c0-4 6-8 6-8s6 4 6 8"/>
          </svg>
          Puente
        </a>
      </div>
      <div class="navbar-center">
        <%= if @current_scope && @current_scope.user.role == :super_admin do %>
          <.link href={~p"/admin"} class="btn btn-ghost btn-sm gap-2">
            <.icon name="hero-view-columns" class="h-5 w-5" />
            Tablero de control
          </.link>
        <% end %>
      </div>
      <div class="navbar-end flex items-center gap-2 sm:gap-4">
        <Layouts.theme_toggle />
        <%= if @current_scope do %>
          <div class="dropdown dropdown-end">
            <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar placeholder">
              <%= cond do %>
                <% @current_scope.user.role == :organization &&
                   @current_scope.user.organization &&
                   @current_scope.user.organization.image_path -> %>
                  <div class="w-10 rounded-full">
                    <img src={@current_scope.user.organization.image_path} alt="Avatar" />
                  </div>
                <% @current_scope.user.image_path -> %>
                  <div class="w-10 rounded-full">
                    <img src={@current_scope.user.image_path} alt="Avatar" />
                  </div>
                <% true -> %>
                  <div class="bg-primary text-primary-content rounded-full w-10">
                    <span class="text-sm"><%= String.first(@current_scope.user.first_name) <> String.first(@current_scope.user.last_name) %></span>
                  </div>
              <% end %>
            </div>
            <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-48 sm:w-52 p-2 shadow">
              <li class="menu-title">
                <span><%= @current_scope.user.first_name %> <%= @current_scope.user.last_name %></span>
              </li>
              <li><span class="text-xs text-base-content/60"><%= @current_scope.user.email %></span></li>
              <%= if @current_scope.user.role == :organization do %>
                <li class="mt-2">
                  <.link href={~p"/organization/profile"}>
                    <.icon name="hero-building-office" class="h-4 w-4" />
                    Mi Organizacion
                  </.link>
                </li>
                <li>
                  <.link href={~p"/organization/settings"}>
                    <.icon name="hero-cog-6-tooth" class="h-4 w-4" />
                    Configuracion
                  </.link>
                </li>
              <% else %>
                <li class="mt-2">
                  <.link href={~p"/donor/settings"}>
                    <.icon name="hero-cog-6-tooth" class="h-4 w-4" />
                    Configuracion
                  </.link>
                </li>
              <% end %>
              <li>
                <.link href={~p"/users/log-out"} method="delete">
                  <.icon name="hero-arrow-right-on-rectangle" class="h-4 w-4" />
                  Cerrar sesion
                </.link>
              </li>
            </ul>
          </div>
        <% else %>
          <!-- Mobile: Hamburger menu -->
          <div class="dropdown dropdown-end sm:hidden">
            <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
              <.icon name="hero-bars-3" class="h-6 w-6" />
            </div>
            <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-48 p-2 shadow">
              <li>
                <.link href={~p"/users/log-in"}>
                  <.icon name="hero-arrow-right-on-rectangle" class="h-4 w-4" />
                  Iniciar sesion
                </.link>
              </li>
              <li>
                <.link href={~p"/users/register"}>
                  <.icon name="hero-user-plus" class="h-4 w-4" />
                  Registrarse
                </.link>
              </li>
            </ul>
          </div>
          <!-- Desktop: Buttons -->
          <.link href={~p"/users/log-in"} class="btn btn-ghost btn-sm hidden sm:flex">
            Iniciar sesion
          </.link>
          <.link href={~p"/users/register"} class="btn btn-primary btn-sm hidden sm:flex">
            Registrarse
          </.link>
        <% end %>
      </div>
    </div>

    <!-- Main Content -->
    {@inner_content}
  </body>
</html>
